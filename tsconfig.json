{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "noImplicitAny": false, //仅允许隐式 any
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "vite/client"
    ],
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "shims-vue.d.ts",
    "src/stores/categoryStore.ts",
    "src/apis/home.ts",
    "src/views/category/composables/useBanner.js",
    "src/apis/detail.js",
    "src/apis/user.js",
    "src/stores/user.js",
    "src/main.js",
    "src/utils/https.js"
  ],
  "exclude": [
    "node_modules"
  ]
}